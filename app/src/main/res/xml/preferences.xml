<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_app">
    <ListPreference
        android:entryValues="@array/type_map"
        android:entries="@array/type_map"
        android:title="Тип карты"
        android:key="type_map">

    </ListPreference>
    <PreferenceCategory
        android:title="@string/user_data">


        <ListPreference
            android:defaultValue="1"
            android:entries="@array/sex_array"
            android:entryValues="@array/sex_values"
            android:key="list_preference_1"
            android:title="@string/sex" />
        <EditTextPreference
            android:defaultValue="20"
            android:key="age_key"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/age" />
        <EditTextPreference
            android:defaultValue="60"
            android:key="weight_key"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/wieght" />
    </PreferenceCategory>
</PreferenceScreen>